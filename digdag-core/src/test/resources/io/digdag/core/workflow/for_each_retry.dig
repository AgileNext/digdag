_retry: 2
+test:
  _export:
    counts: [
      0, 1, 2
    ]
  +echo:
    for_each>:
      count: ${counts}
    _do:
      echo>: ${count}
      append_file: out
  +failure:
    _error:
      echo>: ${error.message}
      append_file: out
    for_each>:
      count: ${counts}
    _do:
      +fail:
        fail>: failed